/* Написать функцию min(a,b) для нахождения минимального из двух чисел. Вычислить с ее помощью значение выражения: z - min(3x, 2у) + min(x - у, х + у)*/.
 #include <iostream>
#include <math.h>
using namespace std;

float min (float a , float b)
{
return (a < b) ? a : b;
}
int main()
{
float x , y, z, c;
cout << " введите х у z ";
cin >> x >> y >> z;
c = z - min(3 * x, 2 * y) + min (x - y , x + y);


cout << " c = " << c << endl;
return 0;
}
